<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/js/all.min.js"
      integrity="sha512-8pHNiqTlsrRjVD4A/3va++W1sMbUHwWxxRPWNyVlql3T+Hgfd81Qc6FC5WMXDC+tSauxxzp1tgiAvSKFu1qIlA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <link rel="stylesheet" href="/css/contacts.css" />
    <title><%= locals.title %></title>
  </head>
  <body>
    <h1 id="page-heading">
      <i class="fas fa-address-book"></i> My Contact List
    </h1>

    <div id="listsdiv">
      <ul id="ullists">
        <% for(var i of locals.contactList){ %>

        <li id="actlists">
          <p class="paralist"><%= i.name %></p>
          <p class="paralist"><%= i.phone %></p>
          <div>
            <a href="/delete-contact/?phone=<%= i.phone %>"
              ><i class="fas fa-window-close"></i
            ></a>
          </div>
        </li>

        <% } %>
      </ul>
    </div>

    <form action="/create-contact" method="POST" class="formclass">
      <input type="text" name="name" placeholder="Enter Name" required />
      <input
        type="number"
        name="phone"
        placeholder="Enter Phone Number"
        required
      />
      <button type="submit">Add Contact</button>
    </form>
    <script type="text/javascript" src="/js/contacts.js"></script>
  </body>
</html>
